<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/relativeResultLayout"
    android:background="@drawable/background_land">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/percentView"
        android:inputType="text"
        android:textSize="14dp"
        android:layout_below="@+id/finishTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/timeView"
        android:inputType="text"
        android:textSize="14dp"
        android:layout_below="@+id/averageDifficultyView"
        android:layout_toEndOf="@+id/restartButton"
        android:layout_marginTop="35dp"
        android:textColor="@color/text_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/averageTimeView"
        android:inputType="text"
        android:textSize="14dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/stdDevView"
        android:textColor="@color/text_color" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="@string/restart_button_title"
        android:id="@+id/restartButton"
        android:textSize="10dp"
        android:layout_above="@+id/review_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_effect"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="@string/review_button_title"
        android:id="@+id/review_button"
        android:textSize="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_effect"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/result_activity_title"
        android:id="@+id/finishTitle"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/stdDevView"
        android:inputType="text"
        android:textSize="14dp"
        android:layout_below="@+id/averageTimeView"
        android:layout_alignStart="@+id/timeView"
        android:layout_marginTop="30dp"
        android:textColor="@color/text_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/averageDifficultyView"
        android:textSize="14dp"
        android:layout_below="@+id/finishTitle"
        android:layout_alignStart="@+id/stdDevView"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_color" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:id="@+id/typeLinearLayout"
        android:layout_toStartOf="@+id/restartButton"
        android:layout_above="@+id/restartButton"
        android:layout_below="@+id/percentView"></LinearLayout>

</RelativeLayout>
